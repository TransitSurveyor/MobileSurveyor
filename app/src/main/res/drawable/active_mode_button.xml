<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff3add41" />
            <stroke
                android:width="1dp"
                android:color="#ff46bf4c" />
            <corners
                android:radius="3dp" />
            <!--padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /-->
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff47c64d"
                android:endColor="#ff3daa41"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff2c9831" />
            <corners
                android:radius="3dp" />
            <!--padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /-->
        </shape>
    </item>
</selector>