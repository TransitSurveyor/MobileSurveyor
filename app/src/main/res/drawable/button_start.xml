<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffdfdfdf" />
            <stroke
                android:width="1dp"
                android:color="#ffdfdfdf" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/light_grey" />
            <stroke
                android:width="1dp"
                android:color="@color/light_grey" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>