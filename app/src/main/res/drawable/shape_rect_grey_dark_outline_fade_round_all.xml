<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ffd0d0d0"
                android:endColor="#ffb4b4b4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black_light_light" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:startColor="#ff8b8b8b"
                android:endColor="#ff434343"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black_light" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

</selector>